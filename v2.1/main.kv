            pos_hint : {"x":0.25, "top":0.75}
        TextInput:
            id : user
            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.75}
        Label:
            text : "E-pasts: "
            size_hint : 0.2, 0.05
            pos_hint : {"x":0.25, "top":0.68}
        TextInput:
            id : email
            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.68}
        Label:
            text : "Parole: "
            size_hint : 0.2, 0.05
            pos_hint : {"x" : 0.25, "top" : 0.61}
        TextInput:
            id : pwd
            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.61}
