            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.68}
        Label:
            text : "Parole: "
            size_hint : 0.2, 0.05
            pos_hint : {"x" : 0.25, "top" : 0.61}
        TextInput:
            id : pwd
            multiline :False
            size_hint : 0.3, 0.05
