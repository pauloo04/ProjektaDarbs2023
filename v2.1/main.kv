<Pieslegties>:
    email: email
    pwd: pwd
    noti: noti
    name: "pieslegties"

    rows: 2
    LONavbar:
    FloatLayout:
        Label:
            text : "E-pasts: "
            size_hint : 0.2, 0.05
            pos_hint : {"x":0.25, "top":0.67}
        TextInput:
            id : email
            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.67}
        Label:
            text : "Parole: "
            size_hint : 0.2, 0.05
            pos_hint : {"x" : 0.25, "top" : 0.6}
        TextInput:
            id : pwd
            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.6}
            password : True
        Button:
            text : "Pieslēgties"
            size_hint : 0.3, 0.07
            pos_hint : {"x" : 0.4, "top" : 0.5}
            on_release: 
                root.login()
        Label:
            id: noti
            text: ""
            size_hint : 0.3, 0.07
            pos_hint : {"x" : 0.4, "top" : 0.4}

<Registreties>:
