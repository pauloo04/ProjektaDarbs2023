        Label:
            text : "Apstipriniet paroli: "
            size_hint : 0.2, 0.05
            pos_hint : {"x" : 0.25, "top" : 0.54}
        TextInput:
            id : pwdc
            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.54}
            password : True
        Button:
            text : "Reģistrēties"
            size_hint : 0.3, 0.07
            pos_hint : {"x" : 0.4, "top" : 0.44}
