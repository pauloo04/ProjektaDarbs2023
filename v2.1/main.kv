#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import MapView kivy_garden.mapview.MapView

<LOHome>:
    name: "lohome"
    rows: 2
    LONavbar:
    Label:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/home-hero.jpg'
        text: "Home screen"

<LONotikumi>:
    name: "lonotikumi"
    rows: 2
    LONavbar:
    Map:
        lat: 56.96
        lon: 24.5
        zoom: 7

<LOVeikals>:
    name: "loveikals"
    rows: 2
    LONavbar:
    Label:
        text: "Seit vares pirkt"

<LOFAQ>:
    name: "lofaq"
    rows: 2
