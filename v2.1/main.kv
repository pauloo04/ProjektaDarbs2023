<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (32/255, 30/255, 31/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [15]

<RoundedActiveButton@Button>
    background_color: (0, 0, 0, 0)
