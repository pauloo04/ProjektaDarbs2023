<Profils>:
    userfield: userfield
    emailfield: emailfield
    name: "profils"
    rows: 2
    LINavbar:
    FloatLayout:
        Label:
            text : root.cash
            size_hint: 0.1, 0.05
            pos_hint: {"x": 0.85, "top":0.9}
        Label:
            text : "Lietotājvārds: "
            size_hint : 0.2, 0.05
            pos_hint : {"x":0.25, "top":0.7}
        TextInput:
            id: userfield
            text : ""
            size_hint : 0.2, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.7}
            disabled: not root.changeuser
        Button:
            text: root.changeusertext
            size_hint : 0.1, 0.05
            pos_hint : {"x": 0.65, "top" : 0.7}
            on_release:
                root.change_user()
        Label:
            text : "E-pasts: "
            size_hint : 0.2, 0.05
            pos_hint : {"x":0.25, "top":0.6}
        TextInput:
            id: emailfield
            text : ""
            size_hint : 0.2, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.6}
            disabled: not root.changeemail
        Button:
            text: root.changeemailtext
            size_hint : 0.1, 0.05
            pos_hint : {"x": 0.65, "top" : 0.6}
            on_release:
                root.change_email()

