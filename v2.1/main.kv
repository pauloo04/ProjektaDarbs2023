#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import MapView kivy_garden.mapview.MapView

<LOHome>:
    name: "lohome"
    rows: 2
    LONavbar:
    Label:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/home-hero.jpg'
        text: "Home screen"

<LONotikumi>:
    name: "lonotikumi"
    rows: 2
    LONavbar:
    Map:
        lat: 56.96
        lon: 24.5
        zoom: 7

<LOVeikals>:
    name: "loveikals"
    rows: 2
    LONavbar:
    Label:
        text: "Seit vares pirkt"

<LOFAQ>:
    name: "lofaq"
    rows: 2
    LONavbar:
    Label:
        text: "Seit bus atbildes uz biezak uzdotajiem jautajumiem"

<LOParMums>:
    name: "loparmums"
    rows: 2
    LONavbar:
    Label:
        text: "Seit bus nedaudz uzrakstits par mums"

<Pieslegties>:
    email: email
    pwd: pwd
    noti: noti
    name: "pieslegties"

    rows: 2
    LONavbar:
    FloatLayout:
        Label:
            text : "E-pasts: "
            size_hint : 0.2, 0.05
            pos_hint : {"x":0.25, "top":0.67}
        TextInput:
            id : email
            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.67}
        Label:
            text : "Parole: "
            size_hint : 0.2, 0.05
            pos_hint : {"x" : 0.25, "top" : 0.6}
        TextInput:
            id : pwd
            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.6}
            password : True
        Button:
            text : "Pieslēgties"
            size_hint : 0.3, 0.07
            pos_hint : {"x" : 0.4, "top" : 0.5}
            on_release: 
                root.login()
        Label:
            id: noti
            text: ""
            size_hint : 0.3, 0.07
            pos_hint : {"x" : 0.4, "top" : 0.4}

