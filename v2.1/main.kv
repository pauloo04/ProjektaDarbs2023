<LONavbar@GridLayout>:
    size_hint: 1, 0.15
    cols: 2
    LOMainNavbar:
    LoginNavbar:

<LOMainNavbar@GridLayout>:
    cols: 5
    RoundedActiveButton:
        text: "Home"
        on_release:
            app.root.current = "lohome"
    RoundedButton:
        text: "Notikumi"
        on_release:
            app.root.current = "lonotikumi"
    RoundedButton:
        text: "Veikals"
        on_release:
            app.root.current = "loveikals"
    RoundedButton:
        text: "FAQ"
        on_release:
            app.root.current = "lofaq"
    RoundedButton:
        text: "Par Mums"
        on_release:
            app.root.current = "loparmums"

